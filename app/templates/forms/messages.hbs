
{{#if showErrors}}
	{{#each message in controlErrors}}
		<message class="error">{{i18n message attributes=message.attributes}}</message>
	{{/each}}
{{/if}}
{{#each message in controlWarnings}}
	<message class="warning">{{i18n message attributes=message.attributes}}</message>
{{/each}}
{{#each message in controlNotices}}
	<message class="notice">{{i18n message attributes=message.attributes}}</message>
{{/each}}

